@model HMS.Models.InvoiceViewModel

@{
    ViewData["Title"] = "CreateInvoiceById";
}
<h3>This Invoice for Customer</h3>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                City
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Customer.UserName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Customer.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model.Customer.City)
            </td>
        </tr>
    </tbody>
</table>

@if(@Model.Rooms.Count > 0){
    <br />
    <h3>This is his Reservations of Rooms</h3>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].Room.number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].Room.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].Room.Charges)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].DateIn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].DateOut)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rooms[0].Room.image)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Charges)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOut)
                    </td>
                    <td>
                        <img src="~/images/@Html.DisplayFor(modelItem => item.Room.image)" class="img-thumbnail"
                             style="width:150px;height:150px;" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

