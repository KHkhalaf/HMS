@model IEnumerable<HMS.Models.Food>

@{
    ViewData["Title"] = "Index";
}

<h3>Enter Your Room No Then choose your drink favorite</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                Enter Room No
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <strong>@Html.DisplayFor(modelItem => item.Price) $</strong>
                </td>
                <td>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.image)" class="img-thumbnail"
                         style="width:50px;height:50px;" />
                </td>
                <td>
                    <form asp-action="CreateFoodOrder" asp-route-Id="@item.Id" method="post" enctype="multipart/form-data">
                        <div class="container">
                            <div class="row">
                                <div class="col-m-5 form-group">
                                    <input type="text" class="form-control" name="RoomNo" placeholder="Room No" />
                                </div>
                                <div class="col-sm-5 form-group">
                                    <input type="submit" value="choose" class="btn btn-dark form-control" />
                                </div>
                                <div class="col-sm-2 form-group"></div>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
