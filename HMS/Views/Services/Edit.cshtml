@model HMS.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Service</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Room_NO" class="control-label"></label>
                <input asp-for="Room_NO" class="form-control" />
                <span asp-validation-for="Room_NO" class="text-danger"></span>
            </div>
            @if (!User.IsInRole("Customer"))
            {
                <div class="form-group form-control-range">
                    <label asp-for="Status" class="control-label"></label>
                    <select class="form-control" asp-for="Status">
                        <option value="SHIPPING">SHIPPING</option>
                        <option value="DELIVERED">DELIVERED</option>
                        <option value="PENDING">PENDING</option>
                        <option value="DONE">DONE</option>
                    </select>
                </div>
            }
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input hidden asp-for="Service_Type" class="form-control" />
                <input hidden asp-for="Service_Date" class="form-control" />
                <input hidden asp-for="Cost" class="form-control" />
                @if (Model.Service_Type == "Table Reservation")
                {
                    <div class="form-group">
                        <label asp-for="Table_No" class="control-label"></label>
                        <input asp-for="Table_No" class="form-control" />
                        <span asp-validation-for="Table_No" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

