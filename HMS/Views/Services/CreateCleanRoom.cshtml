@model HMS.Models.Service

@{
    ViewData["Title"] = "CreateCleanRoom";
}

    <h1>Create Service Clean Room</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCleanRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room_NO" class="control-label"></label>
                <input asp-for="Room_NO" class="form-control" />
                <span asp-validation-for="Room_NO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <label class="form-control"> Cost for this service : <strong>100 $</strong></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>


